{
  "compilerOptions": {
    "target": "es2020",
    "module": "Node16",
    "moduleResolution": "Node16",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "rootDir": ".",
    "types": ["node"]
  },
  "include": [
    "./hardhat.config.ts",
    "./scripts",
    "./test",
    "./contracts",
    "./typechain-types"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
